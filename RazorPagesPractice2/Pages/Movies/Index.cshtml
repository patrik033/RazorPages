@page
@model RazorPagesPractice2.Pages.Movies.IndexModel
@{
}


<h1>Index</h1>
<a asp-page="Create" class="btn btn-primary">Create New</a>


<table class="table table-dark table-striped mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Movie.Title)</th>
            <th>@Html.DisplayNameFor(m=>m.Movie.ReleaseDate)</th>
            <th>@Html.DisplayNameFor(m=>m.Movie.Price)</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>

